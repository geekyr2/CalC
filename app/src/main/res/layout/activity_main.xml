<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="40dp"
            android:text=""
            android:id="@+id/t"
            android:textSize="50sp"
            android:textStyle="italic" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="#EEEEEE"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EEEEEE"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/b7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#ff9800"
                android:text="7"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/b4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#ff9800"
                android:text="4"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#ff9800"
                android:text="1"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/b0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#ff9800"
                android:text="0"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/b8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#ff9800"
                android:text="8"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/b5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#ff9800"
                android:text="5"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#ff9800"
                android:text="2"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/bDOT"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#ff9800"
                android:text="."
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/b9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#ff9800"
                android:text="9"
                android:textSize="25sp"
                android:textStyle="normal"
                android:textColor="#fff" />

            <Button
                android:id="@+id/b6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#ff9800"
                android:text="6"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/b3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#ff9800"
                android:text="3"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/bEquals"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:background="#00e676"
                android:text="="
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/bC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:background="#302cff"
                android:text="c"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/bDIV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:background="#00e676"
                android:text="/"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/bMUL"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:background="#00e676"
                android:text="*"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/bSUB"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:background="#00e676"
                android:text="-"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/bAdd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:background="#00e676"
                android:text="+"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>